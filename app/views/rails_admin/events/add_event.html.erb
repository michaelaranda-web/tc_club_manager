<div id="new-event-page">
  <div class="page-header">
    <h1>Submit New Event</h1>
  </div>
  
  <form class="form-horizontal denser">
    <div class="form-group control-group is-empty" id="event_event_type_id">
      <label class="col-sm-2 col-md-1" for="event_type">Event Type</label>
      <div class="col-sm-10 controls">
        <select name="event[event_type_id]">
          <option disabled value="default">Select recurring event type</option>
          <%= options_from_collection_for_select(@event_types, 'id', 'name') %>
        </select>
      </div>
    </div>
    
    <div class="form-group control-group is-empty" id="event_name_field">
      <label class="col-sm-2 col-md-1" for="event_name">Name</label>
      <div class="col-sm-10 controls">
        <input class="form-control" size="50" type="text" name="event[name]" id="event_name">
      </div>
    </div>
    
    <div class="form-group control-group is-empty" id="event_volunteer_hours_field">
      <label class="col-sm-2 col-md-1" for="event_volunteer_hours">Volunteer Hours</label>
      <div class="col-sm-10 controls">
        <input class="form-control" size="50" type="text" name="event[volunteer_hours]" id="event_volunteer_hours">
      </div>
    </div>
    
    <div class="form-group control-group is-empty" id="event_driving_distance_field">
      <label class="col-sm-2 col-md-1" for="event_driving_distance">Driving Distance</label>
      <div class="col-sm-10 controls">
        <input class="form-control" size="50" type="text" name="event[driving_distance]" id="event_driving_distance">
      </div>
    </div>
    
    <div class="form-group control-group is-empty" id="event_event_summary_field">
      <label class="col-sm-2 col-md-1" for="event_event_summary">Event Summary</label>
      <div class="col-sm-10 controls">
        <textarea name="event[event_summary]" id="event_event_summary"></textarea>
      </div>
    </div>
    
    <div class="form-group control-group is-empty" id="event_comments_field">
      <label class="col-sm-2 col-md-1" for="event_comments">Comments</label>
      <div class="col-sm-10 controls">
        <textarea name="event[comments]" id="event_comments"></textarea>
      </div>
    </div>
  
  </form>
</div>